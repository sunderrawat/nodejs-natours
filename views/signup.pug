extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Signup for new account
      form.form.form--signup
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', placeholder='Sunder Rawat', required)
        .form__group
          label.form__label(for='email-signup') Email address
          input#email-signup.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password-signup') Password
          input#password-signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
        .form__group.ma-bt-md
          label.form__label(for='password-confirm') Password Confirm
          input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Signup